<style>
    body {
        background-image: -webkit-linear-gradient(0deg, #bfacff 0%, #795fff 100%);
    }
</style>
<div class="limiter">
    {{#if errors}}
    {{#each errors}}
    <div class="alert alert-danger alert-dismissible fade show mt-2" role="alert">
        <strong>{{message}}</strong>
    </div>
    {{/each}}
    {{/if}}
    <div class="container-login100 mt-5" style="background-image: url('images/bg-01.jpg');">
        <div class="wrap-login100 p-l-110 p-r-110 p-t-62 p-b-33">
            <form class="login100-form validate-form flex-sb flex-w" action="/register" method="post">
                <span class="login100-form-title p-b-53">
                    Register To FullStackie
                </span>

                <div class="col-md-4 p-t-31 p-b-9">
                    <span class="txt1">
                        Fullname
                    </span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Fullname is required">
                    <input name="fullname" class="input100" id="exampleInputFullName" type="name"
                        aria-describedby="nameHelp" placeholder="Joshua Mane" value="{{fullname}}" />
                    <span class="focus-input100"></span>
                </div>

                <div class="col-md-4 p-t-31 p-b-9">
                    <span class="txt1">
                        Email
                    </span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Username is required">
                    <input name="email" class="input100" id="exampleInputEmail1" type="email"
                        aria-describedby="emailHelp" placeholder="joshua@mail.com" value="{{email}}" />
                    <span class="focus-input100"></span>
                </div>

                <div class="col-md-4 p-t-31 p-b-9">
                    <span class="txt1">
                        Username
                    </span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Username is required">
                    <input name="username" class="input100" id="exampleInputUserName" type="text"
                        aria-describedby="nameHelp" placeholder="TheRexinator34" value="{{username}}" />
                    <span class="focus-input100"></span>
                </div>

                <div class="col-md-4 p-t-31 p-b-9">
                    <span class="txt1">
                        Bio
                    </span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Bio is required">
                    <input name="bio" class="input100" id="exampleInputbio" type="name" aria-describedby="nameHelp"
                        placeholder="Web Developer" value="{{bio}}" />
                    <span class="focus-input100"></span>
                </div>

                <div class="col-md-4 p-t-31 p-b-9">
                    <span class="txt1">
                        Password
                    </span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Username is required">
                    <input name="password" class="input100" id="exampleInputPassword1" type="password"
                        placeholder="Password" placeholder="Password"></span>
                </div>

                <div class="col-md-4 p-t-31 p-b-9">
                    <span class="txt1">
                        Confirm Password
                    </span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Username is required">
                    <input name="passwordConfirm" class="input100" id="exampleConfirmPassword" type="password"
                        placeholder="Confirm Password" />
                    <span class="focus-input100"></span>
                </div>
                <div class="container-login100-form-btn m-t-17">
                    <button class="login100-form-btn" type="submit">
                        Register
                    </button>
                </div>

                <div class="w-full text-center p-t-55">
                    <span class="txt2">
                        Already a member?
                    </span>

                    <a href="/login" class="txt2 bo1">
                        Login
                    </a>
                </div>

                <span class="login100-form-title p-b-53">
                    Sign Up Via
                </span>
                <a href="#" class="btn-face m-b-20">
                    <i class="fa fa-facebook-official"></i>
                    Facebook
                </a>

                <a href="#" class="btn-google m-b-20">
                    <img src="images/icons/icon-google.png" alt="GOOGLE" />
                    Google
                </a>
                <a href="#" style="background-color: black" class="btn-face m-b-20">
                    <i class="fa fa-github"></i>
                    Github
                </a>
            </form>
        </div>
    </div>
</div>